{
  "name": "starter-project",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all -s scss -p server js:dev watch:scss",
    "build": "npm-run-all -s scss js:prod",
    "server": "node tasks/server",
    "scss": "node-sass src/scss/ -o dist/css/ --output-style compressed",
    "js:prod": "webpack --colors --display-chunks --display-modules -p",
    "js:dev": "webpack --colors --display-chunks -w",
    "watch:scss": "nodemon -e scss -x \"npm run scss\"",
    "test": "mocha --reporter nyan --full-trace --require @babel/register './src/**/*spec.js'"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.17.1",
    "jsdom": "^15.1.1",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.0",
    "@babel/core": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "@babel/register": "^7.6.0",
    "babel-loader": "^8.0.6",
    "chai": "^4.2.0",
    "copy-webpack-plugin": "^5.0.4",
    "mocha": "^6.2.0",
    "nodemon": "^1.19.2",
    "webpack": "^4.40.2",
    "webpack-cli": "^3.3.9"
  }
}
